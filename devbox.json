{
	"$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
	"packages": [
		"go@1.25",
		"prettier@latest",
		"golangci-lint@latest",
		"markdownlint-cli2@latest"
	],
	"shell": {
		"scripts": {
			"start": ["go run ./cmd/streamer/"],
			"lint-markdown": [
				"prettier --write .",
				"markdownlint-cli2 --fix README.md"
			]
		}
	}
}
